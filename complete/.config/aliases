#!/usr/bin/env sh

### DEPENDENCIES ###
pytool() {
    SCRIPT=$1; shift
    python3 ~/code/py/tool/$SCRIPT.py "$@"
}


### ALIASES COMMANDS ###
alias nv="nvim"

alias exa="exa --group-directories-first"
alias l="pytool myls"
alias ls="exa"
alias c="clear; ls"
alias ..="cd .."
alias ...="cd ../.."
alias rm="rm -ri"
alias mv="mv -i"
alias xclip="xclip -selection c"
alias tcopy="tmux show-buffer | xclip"
alias cpwd="echo -n $(pwd) | xclip -i"
alias :q="exit"
alias dodo="systemctl suspend"
alias py="python3"
